@inherits ToastBase

<style>
    .container{
        border-radius: 5px/5px;
        border-width: 1.5px;
        display:inline-block;
        width:@width;
        height:@height;
        color:white;
        background-color:transparent;
        position:absolute;
        z-index:2;
        margin: 1.5px;
    }

    .fade-out{
        animation: fadeOut @AnimationTime linear forwards;
    }

    .fade-in{
        animation: fadeIn @AnimationTime linear forwards;
    }

    .toast-icon {
        max-height: 11px;
    }

    .toast-body {
        font-size: 14px;
    }

    @@keyframes fadeOut {
        0%   {opacity:1;}
        99%  {width:@width; height:@height;}
        100% {width:0px;height:0px; opacity:0;}
    }

    @@keyframes fadeIn {
        0%  { opacity:0; }
        99% { width:@width; height:@height;}
        100%{ opacity:1; width:@width; height:@height; }
    }
</style>

<div class="container @(IsShown ? "fade-in" : "fade-out") @BackgroundCssClass">
    <div class="toast-icon">
        <span class="fa fa-@IconCssClass" aria-hidden="true"></span>&nbsp;<h5 style="display:inline;">@Heading</h5>
    </div>
    <div class="toast-body">
        <p>@Message</p>
    </div>
</div>

